<% blog.articles.each_with_index do |article, i| %>
  <div class="post-preview">
    <% link_to article do %>
      <h2 class="post-title"><%= article.title %></h2>
      <h4 class="post-subtitle"><%= article.summary(250, '...') %></h4>
    <% end %>
    <p class="post-meta"><%= article.date.strftime('%B %e, %Y') %></p>
    <hr>
  </div>
<% end %>
